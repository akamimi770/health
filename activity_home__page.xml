<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.hp.womenshealth.Home_Page">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
       android:layout_marginBottom="30dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Here we discuss about the health of women"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:background="#6a53cf"
            android:textColor="#fcfbfb"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <Button
            android:id="@+id/bmi"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="BMI"
            android:textSize="40dp"
            android:textAllCaps="false"
            android:background="#6a53cf"
            android:textColor="#fcfbfb"/>

        <Button
            android:id="@+id/priodButton"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:text="Menstrual/ঋতু চক্র"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:background="#6a53cf"
            android:textColor="#fcfbfb"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        >
        <Button
            android:id="@+id/teengerButton"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="teenager problem/কৈশোর/কিশোর সমস্যা"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:background="#31b747"
            android:textColor="#fcfbfb"/>

        <Button
            android:id="@+id/pregnancyButton"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:text="pregnancy/গর্ভাবস্থা"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:background="#ff35c9"
            android:textColor="#fcfbfb"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        >
        <Button
            android:id="@+id/childcareButton"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Child Care/শিশুর যত্ন"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:background="#f6f5fd"
            android:textColor="#120101"
            />

        <Button
            android:id="@+id/oldageButton"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:text="Old age/বার্ধক্য"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:background="#6a53cf"
            android:textColor="#fcfbfb"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        >
        <Button
            android:id="@+id/womenscancerButton"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="womens cancer/নারীদের ক্যান্সার"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:background="#6a53cf"
            android:textColor="#fcfbfb"/>

        <Button
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:text="Priod/ বয়সন্ধি কাল"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:background="#6a53cf"
            android:textColor="#fcfbfb"/>

    </LinearLayout>



</LinearLayout>
